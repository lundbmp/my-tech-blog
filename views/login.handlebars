<form class="login-form py-4">
  <div class="row mb-3">
    <label for="email-login" class="col-1 col-form-label px-5">Email</label>
    <div class="col-6">
      <input type="email" class="form-control" id="email-login">
    </div>
  </div>
  <div class="row mb-3">
    <label for="password-login" class="col-1 col-form-label px-5">Password</label>
    <div class="col-6">
      <input type="password" class="form-control" id="password-login">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Sign in</button>
</form>
<script src="/javascript/login.js"></script>